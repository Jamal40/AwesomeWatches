@page
@model AwesomeWatches.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Home";
}


<div class="container">
    <h5>Actions:</h5>
    <div class="collection">
        <a href="/Admin/AddWatch" class="collection-item  lime-text text-darken-3">Add a Watch</a>
        <a href="/Admin/Category" class="collection-item  lime-text text-darken-3">Add a Category</a>
    </div>

    <h5>Products:</h5>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Item.Price.ToString("C", CultureInfo.CreateSpecificCulture("en-US"))</td>
                    <td>@product.Item.QuantityInStock</td>
                    <td><a class="orange darken-2 waves-effect waves-light btn" href="/Admin/EditWatch/@product.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>

    <br/>
    <br/>

    <h5>Categories:</h5>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td><a class="orange darken-2 waves-effect waves-light btn" href="/Admin/Category/@category.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>