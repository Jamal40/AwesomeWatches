@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h3 class="lime-text text-darken-3 center-align">@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-4">
        <section>
            <form class="container add-form" id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="red-text"></div>
                <div class="row">
                    <div class="input-field col s12">
                        <input asp-for="Input.Email" class="validate inp" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="lime-text text-darken-2"></label>
                        <span asp-validation-for="Input.Email" class="red-text"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input asp-for="Input.Password" class="validate inp" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="lime-text text-darken-2"></label>
                        <span asp-validation-for="Input.Password" class="red-text"></span>
                    </div>
                </div>
                <p>
                    <label>
                        <input asp-for="Input.RememberMe" type="checkbox" class="filled-in inp" checked="checked" />
                        <span>Remember Me</span>
                    </label>
                </p>
                <div class="center-align">
                    <button id="login-submit" type="submit" class="btn lime darken-2">Log in</button>
                </div>
                <div>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
