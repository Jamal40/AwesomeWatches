@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h3 class="lime-text text-darken-3 center-align">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-4">
        <form class="container add-form" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="red-text"></div>
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Input.Email" class="validate inp" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="lime-text text-darken-2"></label>
                    <span asp-validation-for="Input.Email" class="red-text"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Input.Password" class="validate inp" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password" class="lime-text text-darken-2"></label>
                    <span asp-validation-for="Input.Password" class="red-text"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Input.ConfirmPassword" class="validate inp" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword" class="lime-text text-darken-2"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="red-text"></span>
                </div>
            </div>
            <div class="center-align">
                <button id="registerSubmit" type="submit" class="btn lime darken-2">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
